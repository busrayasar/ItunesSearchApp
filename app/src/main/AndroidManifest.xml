<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.busrayasar.itunessearchapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/itunesstore"
        android:label="@string/app_name"
        android:roundIcon="@drawable/itunesstore"
        android:supportsRtl="true"
        android:theme="@style/Theme.ITunesSearchApp">
        <activity
            android:name=".ui.main.view.MainActivity"
            android:exported="true"
            android:label="@string/app_name"

            android:theme="@style/Theme.ITunesSearchApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>